 <h1 style="text-align: center;"> Login </h1>

<div class="container">
    <div class="row">
       
        <div style="width: 30%; margin: 25px auto;">  
            <form action="/login" method="post">
                
                <div class="form-group"> <input class="form-control" type="email" name="username" placeholder="email" required></div>
                <div class="form-group"> <input class="form-control" type="number" name="id" placeholder="id" required></div>
                <div class="form-group"> <input class="form-control" type="password" name="password" placeholder="password" required></div>
                <div class="form-group"> <button class="btn btn-lg btn-default btn-block btn-success">submit</button></div>
            </form>
            <a href="/register">Sign Up </a>
        </div>
    </div>
    
</div>


